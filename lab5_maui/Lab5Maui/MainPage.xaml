<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Lab5Maui.Models"
    xmlns:vm="clr-namespace:Lab5Maui.ViewModels"
    x:Class="Lab5Maui.MainPage"
    x:DataType="vm:MainViewModel"
    Title="Products">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Label Text="Products"
               FontSize="32"
               FontAttributes="Bold" />

        <Grid ColumnDefinitions="2*,*,*,2*" RowDefinitions="Auto" Padding="0,8">
            <Label Text="Name" FontAttributes="Bold" />
            <Label Text="Kind" Grid.Column="1" FontAttributes="Bold" />
            <Label Text="Price" Grid.Column="2" FontAttributes="Bold" />
            <Label Text="Description" Grid.Column="3" FontAttributes="Bold" />
        </Grid>

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Product">
                    <Grid ColumnDefinitions="2*,*,*,2*" Padding="0,4">
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Kind}" Grid.Column="1" />
                        <Label Text="{Binding Price}" Grid.Column="2" />
                        <Label Text="{Binding Description}" Grid.Column="3" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Padding="0,8,0,0">
            <Button Text="Додати" Clicked="Add_Clicked" />
            <Button Text="Видалити останній" Grid.Column="1" Clicked="Remove_Clicked" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>